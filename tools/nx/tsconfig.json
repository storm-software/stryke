{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@storm-software/tsconfig/core.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "../..",
    "types": ["node"]
  },
  "include": [
    "executors.ts",
    "generators.ts",
    "index.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.json",
    "tsup.config.ts",
    "eslint.config.mjs"
  ],
  "exclude": [
    "jest.config.ts",
    "src/generators/**/files/**/*",
    "src/**/untyped.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
