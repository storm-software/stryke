{
  "name": "capnp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/capnp/src",
  "targets": {
    "build-base": {
      "cache": false,
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "tsup-node --config=tsup.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build-schema": {
      "cache": false,
      "executor": "nx:run-commands",
      "dependsOn": ["build-base"],
      "options": {
        "command": "node ./{projectRoot}/dist/bin/capnpc.js --project-root packages/capnp --schema ./{projectRoot}/src/vendor/_capnp --no-dts"
      }
    },
    "build-vendor": {
      "cache": false,
      "executor": "nx:run-commands",
      "dependsOn": ["build-schema"],
      "options": {
        "command": "tsup-node  --config=tsup.vendor.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "cache": false,
      "executor": "nx:run-commands",
      "dependsOn": ["build-vendor"],
      "options": {
        "commands": [
          "pnpm copyfiles LICENSE dist/packages/capnp",
          "pnpm copyfiles --up=2 ./packages/capnp/*.md ./packages/capnp/package.json dist/packages/capnp",
          "pnpm copyfiles --up=4 \"./packages/capnp/dist/src/**/*\" dist/packages/capnp/dist",
          "pnpm copyfiles --up=4 \"./packages/capnp/dist/bin/**/*\" dist/packages/capnp/bin",
          "pnpm copyfiles --up=4 \"./packages/capnp/dist/vendor/**/*\" dist/packages/capnp/vendor"
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  },
  "tags": ["platform:node"]
}
